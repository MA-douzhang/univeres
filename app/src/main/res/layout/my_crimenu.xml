<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:tools="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:background="@drawable/gradual_color_bg">
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:orientation="horizontal"
                    >
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="用户名:"
                  android:textSize="20dp"
                  android:textColor="@color/shadow"
        ></TextView>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/id_my_crimenu_name"
                  android:text=""
                  android:textSize="20dp"
                  android:textColor="@color/shadow"
        ></TextView>
    </LinearLayout>

    <!--    sideview布局-->
    <ImageView
            android:layout_width="477dp"
            android:layout_height="504dp"
            android:layout_marginTop="180dp"
            android:src="@drawable/my_backgroundimg"/>
    <RelativeLayout
            android:id="@+id/rl_Relative"
            android:layout_width="50dp"
            android:layout_height="200dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/sideview_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

        <ImageView
                android:id="@+id/iv_fead"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:visibility="invisible"
                android:src="@drawable/ic_baseline_text_snippet_24"/>

        <ImageView
                android:id="@+id/iv_set"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:visibility="invisible"
                android:src="@drawable/ic_baseline_settings_24"/>

        <ImageView
                android:id="@+id/iv_mess"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:visibility="invisible"
                android:src="@drawable/ic_baseline_message_24"/>

        <ImageView
                android:id="@+id/iv_menu"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_baseline_view_headline_24"/>
    </RelativeLayout>


    <!--    cricularmenu布局-->
    <RelativeLayout
            android:id="@+id/rl_circle_menu"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="308dp"
            android:background="@drawable/mune_bg">

        <ImageView
                android:id="@+id/id_iv_shop"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:visibility="invisible"
                android:src="@drawable/ic_baseline_shopping_cart_24" android:layout_centerInParent="true"/>

        <ImageView
                android:id="@+id/id_iv_add"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:visibility="invisible"
                android:src="@drawable/ic_baseline_cached_24"/>

        <ImageView
                android:id="@+id/id_iv_home"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:visibility="invisible"
                android:src="@drawable/ic_baseline_home_24" android:layout_centerInParent="true"/>

        <ImageView
                android:id="@+id/id_menu1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/mune_bg"
                android:layout_centerInParent="true"/>


    </RelativeLayout>

    <Button android:layout_width="78dp"
            android:layout_height="53dp"
            android:id="@+id/id_exit"
            android:background="@drawable/id_button_bg"
            android:text="退出"
            android:textSize="12dp"
            android:layout_marginBottom="-81dp"
            android:layout_alignBottom="@+id/rl_Relative"
            android:layout_alignTop="@+id/rl_Relative"
            android:layout_marginTop="228dp"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/rl_Relative"/>
</RelativeLayout>
