        ></ImageButton>
    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:background="@drawable/shadow"
                  android:orientation="vertical">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="星球探索者" android:textSize="20dp">
        </TextView>
        <ImageButton android:layout_width="200dp" android:layout_height="160dp"
                     android:background="@drawable/plane_img"
        ></ImageButton>
    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:background="@drawable/shadow"
                  android:orientation="vertical">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="星球探索者" android:textSize="20dp">
        </TextView>
        <ImageButton android:layout_width="200dp" android:layout_height="160dp"
                     android:background="@drawable/plane_img"
        ></ImageButton>
    </LinearLayout>
</LinearLayout>

</HorizontalScrollView>
</ScrollView>